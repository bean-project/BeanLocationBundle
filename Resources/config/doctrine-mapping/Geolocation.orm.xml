<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Bean\Bundle\LocationBundle\Model\Geolocation">
        <field name="name" column="name" type="string" nullable="true"/>

        <field name="address" column="address" type="string" nullable="false"/>

        <field name="country" column="country" type="string" nullable="true"/>

        <field name="firstDivision" column="first_division" type="string" nullable="true"/>

        <field name="secondDivision" column="second_division" type="string" nullable="true"/>

        <field name="thirdDivision" column="third_division" type="string" nullable="true"/>

        <field name="fourthDivision" column="fourth_division" type="string" nullable="true"/>

        <field name="fifthDivision" column="fifth_division" type="string" nullable="true"/>

        <field name="street" column="street" type="string" nullable="true"/>

        <field name="number" column="number" type="string" nullable="true"/>

        <field name="placeId" column="place_id" type="string" nullable="true"/>

        <field name="latitude" column="latitude" type="float" nullable="true"/>

        <field name="longitude" column="longitude" type="float" nullable="true"/>

    </mapped-superclass>

</doctrine-mapping>